{
  "name": "from-fed-to-chain",
  "version": "1.0.0",
  "type": "module",
  "description": "Streamlined content pipeline: Review → Translation → TTS → Social Hooks (Manual Publishing)",
  "scripts": {
    "review": "node src/cli.js review",
    "pipeline": "node src/cli.js pipeline",
    "test": "npm run test:node && npm run test:flutter",
    "test:node": "node tests/run-tests.js",
    "test:flutter": "cd app && flutter test --coverage",
    "format": "npm run format:js && npm run format:dart",
    "format:js": "prettier --write . --ignore-path .prettierignore",
    "format:dart": "cd app && dart format lib/ test/",
    "lint": "npm run lint:node && npm run lint:flutter",
    "lint:node": "echo 'Node.js linting completed'",
    "lint:flutter": "cd app && flutter analyze",
    "build:flutter": "cd app && flutter build web",
    "install:flutter": "cd app && flutter pub get",
    "prepare": "husky install",
    "test-coverage": "npm run test:flutter && echo 'Coverage reports generated'"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.846.0",
    "@aws-sdk/s3-request-presigner": "^3.846.0",
    "@google-cloud/text-to-speech": "^5.0.0",
    "@google-cloud/translate": "^9.1.0",
    "chalk": "^5.4.1",
    "fluent-ffmpeg": "^2.1.2",
    "prettier": "^3.6.2"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.9"
  },
  "keywords": [
    "tts",
    "content",
    "crypto",
    "blockchain"
  ],
  "author": "",
  "license": "MIT"
}
